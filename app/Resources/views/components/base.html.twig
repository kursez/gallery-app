<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}The Gallery App{% endblock %}</title>
    {% if app.environment == 'dev' %}
      <link href="{{ asset('dist/styles/main.css') }}" type="text/css" rel="stylesheet"/>
    {% else %}
      <link href="{{ asset('dist/styles/main.min.css') }}" type="text/css" rel="stylesheet"/>
    {% endif %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
  </head>
  <body>
    {% block header %}
      {% include 'components/header.html.twig' %}
    {% endblock %}

    {% block body %}{% endblock %}

    {% block footer %}
      {% include 'components/footer.html.twig' %}
    {% endblock %}

    {% if app.environment == 'dev' %}
      <script src="{{ asset('dist/scripts/main.js') }}"></script>
    {% else %}
      <script src="{{ asset('dist/scripts/main.min.js') }}"></script>
    {% endif %}
  </body>
</html>
